FROM mcr.microsoft.com/dotnet/core/runtime:3.1-buster-slim-arm32v7 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster-arm32v7 AS build
WORKDIR /src
COPY ["fanuc/fanuc.csproj", "fanuc/"]
RUN dotnet restore "fanuc/fanuc.csproj"
COPY . .
WORKDIR "/src/fanuc"
RUN dotnet build "fanuc.csproj" -c Release -o /app/build /nowarn:CS0618 /nowarn:CS8632 /nowarn:CS1998  -p:DefineConstants=ARMV7

FROM build AS publish
RUN dotnet publish "fanuc.csproj" -c Release -o /app/publish /nowarn:CS0618 /nowarn:CS8632 /nowarn:CS1998  -p:DefineConstants=ARMV7

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
RUN mkdir -p /etc/fanuc
COPY docker/config-example.yml /etc/fanuc/nlog.config
COPY docker/nlog-example-linux.config /etc/fanuc/nlog.config

ENTRYPOINT ["dotnet", "fanuc.dll", "--nlog", "/etc/fanuc/nlog.config", "--config", "/etc/fanuc/config.yml"]
